@model IEnumerable<MVCClinica.Models.Medico>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>@Html.ActionLink("Create New", "Create", "Medico")</p>

    @using (Html.BeginForm("IndexPorEspecialidad", "Medico", FormMethod.Get))
    {
        @Html.TextBox("especialidad")
        
        <input type="submit" value="Get" />
    }

    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.NroMatricula)</th>
            <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
            <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
            <th>Detail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Nombre)</td>
                <td>@Html.DisplayFor(model => item.Apellido)</td>
                <td>@Html.DisplayFor(model => item.NroMatricula)</td>
                <td>@Html.DisplayFor(model => item.Especialidad)</td>
                <td>@Html.DisplayFor(model => item.FechaNacimiento)</td>
                <td>@Html.DisplayFor(model => item.Ciudad)</td>
                <td>@Html.ActionLink("Detail", "Detail", new { id = item.Id })</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </table>

</body>
</html>
