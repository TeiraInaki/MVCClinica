@model MVCClinica.Models.Medico
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>Delete Medico</h2>
    <p>Are you sure you want to delete this Medico?</p>
    @using (Html.BeginForm("Delete", "Opera", FormMethod.Post))
    {
        <fieldset>
            <legend>Medico Detail</legend>
            <div class="display-label">
                @* Nombre de la Columna *@
                @Html.DisplayNameFor(model => model.Nombre)
            </div>
            <div class="display-text">
                @* Valor de la Columna *@
                @Html.DisplayFor(model => model.Nombre)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Apellido)
            </div>
            <div class="display-text">
                @Html.DisplayFor(model => model.Apellido)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Especialidad)
            </div>
            <div class="display-text">
                @Html.DisplayFor(model => model.Especialidad)
            </div>
        </fieldset>

        <p>
            @Html.ActionLink("Delete", "DeleteConfirmed", new {id = Model.Id})
        </p>
    }

    <p>
        @Html.ActionLink("Back to List", "Index", "Opera")
    </p>
</body>
</html>
